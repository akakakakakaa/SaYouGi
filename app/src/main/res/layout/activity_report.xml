<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/reportActionbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고하기"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/reportActionbar"
        app:layout_constraintTop_toTopOf="@+id/reportActionbar"
        app:layout_constraintRight_toRightOf="@+id/reportActionbar"
        app:layout_constraintBottom_toBottomOf="@+id/reportActionbar"/>

    <Button
        android:id="@+id/reportReport"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="완료"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/report_report_button"
        app:layout_constraintRight_toRightOf="@+id/reportActionbar"
        app:layout_constraintTop_toTopOf="@+id/reportActionbar"
        app:layout_constraintBottom_toBottomOf="@+id/reportActionbar"/>

    <EditText
        android:id="@+id/reportContent"
        android:layout_width="0dp"
        android:layout_height="158dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:hint="내용을 입력해주세요."
        android:textColorHint="#42000000"
        android:background="@null"
        android:gravity="left|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportActionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#4A95989A"
        app:layout_constraintTop_toBottomOf="@id/reportContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/reportAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:src="@drawable/icon_add_picture"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/reportContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>