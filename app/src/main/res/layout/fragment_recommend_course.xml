<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <View
        android:id="@+id/recommendCourseActionbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 코스"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/recommendCourseActionbar"
        app:layout_constraintTop_toTopOf="@+id/recommendCourseActionbar"
        app:layout_constraintRight_toRightOf="@+id/recommendCourseActionbar"
        app:layout_constraintBottom_toBottomOf="@+id/recommendCourseActionbar"/>

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/recommendCourseViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendCourseActionbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>